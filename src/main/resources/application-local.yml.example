# ================================================
# 로컬 개발 환경 설정 예시 (Example)
# ================================================
# 사용 방법:
# 1. 이 파일을 복사
# 2. application-local.yml 로 이름 변경
# 3. 자신의 환경에 맞게 수정
# ================================================

spring:
  datasource:
    url: jdbc:mariadb://localhost:3306/lms_local?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8&allowPublicKeyRetrieval=true
    username: root
    password: 1234  # ← 자신의 MariaDB 비밀번호로 변경
    driver-class-name: org.mariadb.jdbc.Driver

    hikari:
      maximum-pool-size: 5
      minimum-idle: 2
      connection-timeout: 30000

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true

app:
  upload:
    # Windows 사용자
    video-path: C:/lms-uploads/videos
    # Mac 사용자 (아래 주석 해제)
    # video-path: /Users/YOUR_USERNAME/lms-uploads/videos
    # Linux 사용자 (아래 주석 해제)
    # video-path: /home/YOUR_USERNAME/lms-uploads/videos

logging:
  level:
    org.zerock.projecttraveler: DEBUG
    org.springframework.security: DEBUG
